@model Profile

@{
    ViewData["Title"] = "Michael Pham";
    ViewData["language"] = "DK";
}

<div id="hero" class="container">
    <div class="d-flex flex-column flex-md-row hero-row">
        <div class="hero-text text-center text-md-start">
            <h2 class="display-1"><span style="color:green;">@Model.HeroText</span></h2>
            <h5 class="text-center mb-5">Fullstack developer | IT-Specialist | .NET | SQL</h5>
            <div class="d-flex gap-3 align-items-center social-icons justify-content-center">
                <a class="social-btn" href="#" aria-label="Linkedin"><i data-lucide="linkedin"></i></a>
                <a class="social-btn" href="#" aria-label="Github"> <i data-lucide="Github"></i></a>
                <a class="social-btn" href="#" aria-label="Facebook"><i data-lucide="mail"></i></a>
            </div>
        </div>

        <div class="hero-image mt-4 mt-md-0 ms-md-4">
            <img id="CV" class="img-thumbnail" src="/images/CV Picture.jpg" alt="Michael Pham">
        </div>
    </div>
</div>
<hr>
<section id="scrollspy-tools" class="container d-flex flex-column py-3" style="height: 100vh;">
    <div id="about" class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="mb-4">About Me</h2>
                <p class="fs-4">@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="d-flex flex-row flex-wrap gap-2 align-items-center mt-auto">
        <div class="d-flex align-items-center p-2">
            <img class="tools" src="/images/javascript.svg">
            <h4 class="m-1">Javascript</h4>
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="\images\html-124-svgrepo-com.svg">
            <h4 class="m-1">HTML</h4>
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="\images\css3-02-svgrepo-com.svg">
            <h4 class="m-1">CSS</h4>
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="/images/git.svg">
            <h4 class="m-1">Git</h4>
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="/images/csharp.png">
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="/images/db.png">
            <h4 class="m-1">SSMS</h4>
        </div>
    </div>
</section>
<hr>

<div id="job" class="container py-3">
    <h1 class="mb-4">Job Experience</h1>
    <section>
        <div class="container py-5">
            <div class="main-timeline">
                @for (int i = 0; i < Model.JobExperiences.Count; i++)
                {
                    var job = Model.JobExperiences[i];
                    var side = (i % 2 == 0) ? "right" : "left";
                    <div class="timeline @side">
                        <div class="timeline-dot">
                            @if (!string.IsNullOrEmpty(job.Image))
                            {
                                <img src="@job.Image" alt="Company Icon" />
                            }
                            else
                            {
                                <img src="/images/company-placeholder.svg" alt="Company Icon" />
                            }
                        </div>
                        <div class="card">
                            <div class="card-body p-4">
                                <div class="timeline-date">@job.Title</div>
                                @if (!string.IsNullOrEmpty(job.Company))
                                {
                                    <h3 class="timeline-title">@job.Company</h3>
                                }
                                <p class="mb-0">@job.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
<hr>

<div id="projects" class="container py-3">
    <h1>Projects</h1>
</div>