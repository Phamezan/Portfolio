@model Profile

@{
    ViewData["Title"] = "Michael Pham";
    ViewData["language"] = "DK";
    var descriptionWithEmoji = Model.Description.Replace(
    "{wave}",
    "<span class=\"wave-emoji\" title=\"Hello!\">👋</span>"
    );
}

<div id="hero" class="container">
    <div class="d-flex flex-column flex-md-row hero-row">
        <div class="hero-text text-center text-md-start">
            <h2 class="display-1"><span style="color:green;">@Model.HeroText</span></h2>
            <h5 class="text-center mb-5">Fullstack developer | IT-Specialist | .NET | SQL</h5>
            <div class="d-flex gap-3 align-items-center social-icons justify-content-center">
                <a class="social-btn" href="#" aria-label="Linkedin"><i data-lucide="linkedin"></i></a>
                <a class="social-btn" href="#" aria-label="Github"> <i data-lucide="Github"></i></a>
                <a class="social-btn" href="#" aria-label="Facebook"><i data-lucide="mail"></i></a>
            </div>
        </div>

        <div class="hero-image mt-4 mt-md-0 ms-md-4">
            <img id="CV" class="img-thumbnail" src="/images/CV Picture.jpg" alt="Michael Pham">
        </div>
    </div>
</div>
<div class="stylish-divider"></div>
<section id="about" class="container d-flex flex-column py-5" style="height: 100vh;">
    <div class="py-5">
        <div class="col-lg-10 col-xl-9">
            @if (Model.Language == "DK")
            {
                <h1>Om Mig</h1>
            }
            else
            {
                <h1>About Me</h1>
            }
            <div class="mt-5">
                <h5 id="about-content">@Html.Raw(descriptionWithEmoji)</h5>
            </div>
        </div>
    </div>
    <div class="d-flex flex-row flex-wrap gap-2 align-items-center mt-5 ">
        <div class="d-flex align-items-center p-2">
            <img class="tools" src="/images/javascript.svg">
            <h4 class="m-1">Javascript</h4>
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="\images\html-124-svgrepo-com.svg">
            <h4 class="m-1">HTML</h4>
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="\images\css3-02-svgrepo-com.svg">
            <h4 class="m-1">CSS</h4>
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="/images/git.svg">
            <h4 class="m-1">Git</h4>
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="/images/csharp.png">
        </div>

        <div class="d-flex align-items-center p-2">
            <img class="tools" src="/images/db.png">
            <h4 class="m-1">SSMS</h4>
        </div>
    </div>
</section>
<div class="stylish-divider"></div>

<div id="job" class="container py-3">
    @if (Model.Language == "DK")
    {
        <h1 class="mb-4">Erhvervserfaring</h1>
    }
    else
    {
        <h1 class="mb-4">Job Experience</h1>
    }
    <section>
        <div class="container py-5">
            <div class="main-timeline">
                @for (int i = 0; i < Model.JobExperiences.Count; i++)
                {
                    var job = Model.JobExperiences[i];
                    var side = (i % 2 == 0) ? "right" : "left";
                    <div class="timeline @side">
                        <div class="timeline-dot">
                            @if (!string.IsNullOrEmpty(job.Image))
                            {
                                <img src="@job.Image" alt="Company Icon" />
                            }
                            else
                            {
                                <img src="/images/company-placeholder.svg" alt="Company Icon" />
                            }
                        </div>
                        <div class="card">
                            <div class="card-body p-4">
                                <div class="timeline-date">@job.Title</div>
                                @if (!string.IsNullOrEmpty(job.Company))
                                {
                                    <h3 class="timeline-title">@job.Company</h3>
                                }
                                <p class="mb-0">@job.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
<div class="stylish-divider"></div>

<div id="projects" class="container py-5">
    @if (Model.Language == "DK")
    {
        <h1 class="mb-5 text-center">Projekter</h1>
    }
    else
    {
        <h1 class="mb-5 text-center">Projects</h1>
    }
    <div class="row g-4">
        @foreach (var project in Model.Projects)
        {
            <div class="col-lg-6 col-xl-4">
                <div class="project-card h-100">
                    <div class="project-image">
                        @if (!string.IsNullOrEmpty(project.Image))
                        {
                            <img src="@project.Image" alt="@project.Title" class="img-fluid" />
                        }
                        else
                        {
                            <div class="project-placeholder">
                                <i data-lucide="code"></i>
                            </div>
                        }
                        <div class="project-overlay">
                            @if (!string.IsNullOrEmpty(project.GithubUrl))
                            {
                                <a href="@project.GithubUrl" class="btn project-btn project-btn-public" target="_blank"
                                    aria-label="View on GitHub">
                                    <i data-lucide="github"></i>
                                </a>
                            }
                            else
                            {
                                <div class="btn project-btn project-btn-private" aria-label="Private Repository">
                                    <i data-lucide="lock"></i>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="project-content">
                        <h3 class="project-title">@project.Title</h3>
                        <p class="project-description">@project.Description</p>
                        @if (project.Technologies.Any())
                        {
                            <div class="project-technologies">
                                @foreach (var tech in project.Technologies)
                                {
                                    <span class="tech-badge">@tech</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
